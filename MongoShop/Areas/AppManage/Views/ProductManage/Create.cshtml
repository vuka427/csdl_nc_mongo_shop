@model Product

<div class="container mt-4">
    <h2>Thêm sản phẩm</h2>
    <form asp-action="Create">
        <div class="mb-3">
            <label class="form-label">Tên sản phẩm</label>
            <input class="form-control" asp-for="Name" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Danh mục</label>
            <input class="form-control" asp-for="CategoryId" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Giá</label>
            <input class="form-control" type="number" asp-for="Price" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Số lượng</label>
            <input class="form-control" type="number" asp-for="Stock" required />
        </div>
        <button type="submit" class="btn btn-success">Thêm</button>
    </form>
</div>
