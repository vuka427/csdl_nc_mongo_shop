@model List<Product>

@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-4">
    <h2 class="mb-4">Danh sách sản phẩm</h2>
    <a class="btn btn-primary mb-3" asp-action="Create">Thêm sản phẩm</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Danh mục</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.CategoryId</td>
                    <td>@product.Price</td>
                    <td>@product.Stock</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@product.Id">Sửa</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@product.Id">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
